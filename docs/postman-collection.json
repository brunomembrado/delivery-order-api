                  "});",
                  "",
                  "pm.test('Response contains user information', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.data.id).to.be.a('string');",
                  "    pm.expect(response.data.email).to.be.a('string');",
                  "    pm.expect(response.data.role).to.be.a('string');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
